{% extends 'base.html.twig' %}

{% block title %}Ingrediant index{% endblock %}

{% block body %}
    <h1>Ingrediant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingrediant in ingrediants %}
            <tr>
                <td>{{ ingrediant.id }}</td>
                <td>{{ ingrediant.titre }}</td>
                <td>
                    <a href="{{ path('app_ingrediant_show', {'id': ingrediant.id}) }}">show</a>
                    <a href="{{ path('app_ingrediant_edit', {'id': ingrediant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ingrediant_new') }}">Create new</a>
{% endblock %}
