{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm">
        {% if menu.photo %}
            <img src="{{ asset('uploads/photos/' ~ menu.photo) }}" 
                 alt="Photo du menu {{ menu.titre }}" 
                 class="w-100"
                 style="height: 200px; object-fit: cover;">
        {% endif %}

        <div class="card-body">
            <h1 class="card-title text-center">{{ menu.titre }}</h1>

            <h5 class="mt-4">Ingrédients</h5>
            {% if ingrediants is not empty %}
                <ul class="list-group list-group-flush">
                    {% for ingrediant in ingrediants %}
                        <li class="list-group-item">{{ ingrediant.titre }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-muted">Aucun ingrédient trouvé.</p>
            {% endif %}

            <div class="mt-4 d-flex justify-content-between">
                <a href="{{ path('app_ingrediant_menu_add', {'id': menu.id}) }}" class="btn btn-success">➕ Ajouter un ingrédient</a>
                <a href="{{ path('app_menu_index') }}" class="btn btn-outline-secondary">← Retour à la liste</a>
                <a href="{{ path('app_menu_edit', {'id': menu.id}) }}" class="btn btn-primary">✏️ Modifier</a>
            </div>

            <div class="mt-3">
                {{ include('menu/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
